generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum ShowType {
  SURVIVOR
  DRAG_RACE
  GENERIC
}

enum LeagueVisibility {
  PUBLIC
  PRIVATE
}

enum LeagueRole {
  COMMISSIONER
  CO_COMMISSIONER
  PLAYER
}

enum LeagueStatus {
  DRAFT
  ACTIVE
  COMPLETE
}

enum EpisodeType {
  REGULAR
  FINALE
}

model User {
  id             String         @id @default(cuid())
  name           String?
  displayName    String? // ✅ new
  email          String?        @unique
  emailVerified  DateTime?
  image          String?
  accounts       Account[]
  sessions       Session[]
  leaguesCreated League[]       @relation("LeaguesCreatedBy")
  leagueMembers  LeagueMember[]
  entries        LeagueEntry[] // ✅ ADD THIS
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model League {
  id         String           @id @default(cuid())
  name       String
  showType   ShowType
  visibility LeagueVisibility @default(PRIVATE)
  status     LeagueStatus     @default(DRAFT)
  maxPlayers Int              @default(12)

  // --- Drag Race / season config (MVP) ---
  seasonKey          String?
  startsAt           DateTime?
  submissionDeadline DateTime?
  startedAt          DateTime? // manual override for testing: if set, league is considered started/revealed

  // who created it (not necessarily the only commissioner)
  createdById String
  createdBy   User   @relation("LeaguesCreatedBy", fields: [createdById], references: [id], onDelete: Restrict)

  // timestamps
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // relations
  members LeagueMember[]
  invites LeagueInvite[]
  entries LeagueEntry[] // NEW

  episodes Episode[]

  @@index([showType])
  @@index([createdById])
  @@index([seasonKey]) // NEW (optional but useful)
}

model LeagueMember {
  id       String     @id @default(cuid())
  leagueId String
  userId   String
  role     LeagueRole @default(PLAYER)
  joinedAt DateTime   @default(now())

  league League @relation(fields: [leagueId], references: [id], onDelete: Cascade)
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([leagueId, userId])
  @@index([userId])
}

model LeagueInvite {
  id        String    @id @default(cuid())
  leagueId  String
  token     String    @unique
  isActive  Boolean   @default(true)
  expiresAt DateTime?
  createdAt DateTime  @default(now())

  league League @relation(fields: [leagueId], references: [id], onDelete: Cascade)

  @@index([leagueId])
}

model Queen {
  id        String   @id @default(cuid())
  seasonKey String
  name      String
  imageUrl  String?
  createdAt DateTime @default(now())

  picks          LeagueEntryPick[] // ✅ ADD THIS
  episodeResults EpisodeResult[]

  finalePlacements EpisodeFinalePlacement[]
  finaleExtras     EpisodeFinaleExtra[]

  @@unique([seasonKey, name])
  @@index([seasonKey])
}

model LeagueEntry {
  id          String    @id @default(cuid())
  leagueId    String
  userId      String
  submittedAt DateTime?
  updatedAt   DateTime  @updatedAt
  createdAt   DateTime  @default(now())

  league League             @relation(fields: [leagueId], references: [id], onDelete: Cascade)
  user   User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  picks  LeagueEntryPick[]
  scores LeagueEntryScore[]

  @@unique([leagueId, userId])
  @@index([userId])
  @@index([leagueId])
}

model LeagueEntryPick {
  id         String  @id @default(cuid())
  entryId    String
  queenId    String
  slot       Int // 1..4
  multiplier Decimal @db.Decimal(3, 1) // 2.5, 2.0, 1.5, 1.0

  entry LeagueEntry @relation(fields: [entryId], references: [id], onDelete: Cascade)
  queen Queen       @relation(fields: [queenId], references: [id], onDelete: Restrict)

  @@unique([entryId, slot])
  @@index([queenId])
}

model Episode {
  id          String      @id @default(cuid())
  leagueId    String
  week        Int
  episodeType EpisodeType @default(REGULAR) // ✅ NEW
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  league  League             @relation(fields: [leagueId], references: [id], onDelete: Cascade)
  results EpisodeResult[]
  scores  LeagueEntryScore[]

  // ✅ NEW (finale-only data)
  finalePlacements EpisodeFinalePlacement[]
  finaleExtras     EpisodeFinaleExtra[]

  @@unique([leagueId, week])
  @@index([leagueId])
}

model EpisodeResult {
  id        String   @id @default(cuid())
  episodeId String
  type      String // e.g. "mini", "main", "lipsync", "elimination"
  queenId   String? // null allowed (used for "no elimination")
  createdAt DateTime @default(now())

  episode Episode @relation(fields: [episodeId], references: [id], onDelete: Cascade)
  queen   Queen?  @relation(fields: [queenId], references: [id], onDelete: Restrict)

  @@index([episodeId])
  @@index([type])
  @@index([queenId])
}

model EpisodeFinalePlacement {
  id        String @id @default(cuid())
  episodeId String
  queenId   String
  place     Int // 1..4

  episode Episode @relation(fields: [episodeId], references: [id], onDelete: Cascade)
  queen   Queen   @relation(fields: [queenId], references: [id], onDelete: Restrict)

  @@unique([episodeId, place]) // ✅ prevents two queens being "1st"
  @@unique([episodeId, queenId]) // ✅ prevents same queen twice
  @@index([queenId])
}

model EpisodeFinaleExtra {
  id          String @id @default(cuid())
  episodeId   String
  queenId     String
  miniWins    Int    @default(0)
  mainWins    Int    @default(0)
  lipsyncWins Int    @default(0) // ✅ NEW (supports multiple finale lipsyncs)

  episode Episode @relation(fields: [episodeId], references: [id], onDelete: Cascade)
  queen   Queen   @relation(fields: [queenId], references: [id], onDelete: Restrict)

  @@unique([episodeId, queenId])
  @@index([queenId])
}

model LeagueEntryScore {
  id            String  @id @default(cuid())
  leagueEntryId String
  episodeId     String
  points        Decimal @db.Decimal(10, 2)

  leagueEntry LeagueEntry @relation(fields: [leagueEntryId], references: [id], onDelete: Cascade)
  episode     Episode     @relation(fields: [episodeId], references: [id], onDelete: Cascade)

  @@unique([leagueEntryId, episodeId])
  @@index([episodeId])
  @@index([leagueEntryId])
}
